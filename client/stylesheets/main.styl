body
  background-color #F2F2F2
  margin 0 0 100px
  position initial

html
  position relative
  min-height 100%

/* Override foundation, otherwise, there is a scrollbar */
@media only screen
  [class*="block-grid-"]
    margin: 0;

.wlt-content
  border 1px solid #AAA
  border-bottom 1px solid #888
  padding 15px 15px 0 15px
  margin-bottom 15px
  background-color #FBFBFB
  box-shadow 2px 2px 2px #AAA
  border-radius 3px

.f-dropdown li a.wlt-edit
  color #2ba6cb

.f-dropdown li a.wlt-remove
  color #cc1d15

/* -------------------
    Progress bar
   ------------------- */

#iron-router-progress
  background-color #2c3e50
  box-shadow 0 0 5px #2c3e50

#iron-router-progress.spinner:before
  border-color #2c3e50