body
  background-color #F2F2F2

.wlt-content
  border 1px solid #AAA
  border-bottom 1px solid #888
  padding 15px 15px 0 15px
  margin-bottom 15px
  background-color #FBFBFB
  box-shadow 2px 2px 2px #AAA
  border-radius 3px

/********************************/
/* HEADER                       */
/********************************/

.wlt-header
  background url("homer.png") no-repeat

.wlt-header h1
  position relative
  width 50%
  margin 0.67em auto
  color #434343
  font 40px 'Nunito', sans-serif
  line-height 60px
  text-shadow 1px 1px #ccc
  text-align center
  background: #fff;
  border-radius: 3px;
  box-shadow: 3px 5px 10px #aaa;

.wlt-header h1:before
  content: '';
  position: absolute;
  left: -15px;
  width: 0;
  height: 0;
  top: 20%;
  border-right: 20px solid #fff;
  border-bottom: 20px solid transparent;
  border-top: 20px solid transparent;

.wlt-login input[type="text"]
  font-size 30px
  padding 30px 10px
  text-align center

/********************************/
/* MAIN                         */
/********************************/

.wlt-main
  position relative

/********************************/
/* FORM                         */
/********************************/

/********************************/
/* CHOICE                       */
/********************************/

.wlt-choice
  text-align center

.wlt-choice h1
  color #FFF

/********************************/
/* SEARCH                       */
/********************************/

.wlt-search input[type="text"]
  font-size 30px
  padding 30px 10px

/********************************/
/* FOOTER                       */
/********************************/

.wlt-footer
  background #333
  padding 10px 0 10px
  color #FFF

.wlt-footer ul.wlt-links li
  display block
  float left
  margin-left 6px
  text-transform uppercase
  font-weight 700
  font-size 0.77778rem
